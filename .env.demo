# Demo Environment Configuration
# This is the DEMO version - completely isolated from production

# Supabase Demo Project (separate database)
VITE_SUPABASE_URL=https://demo-chi-pins.supabase.co
VITE_SUPABASE_ANON_KEY=your_demo_anon_key_here

# Demo Mode Flag
VITE_DEMO_MODE=true
VITE_ENVIRONMENT=demo

# Demo Location ID (separate from production)
VITE_DEMO_LOCATION_ID=demo-chicago-mikes

# Feature Flags for Demo
VITE_ENABLE_ORDERING=false
VITE_ENABLE_PAYMENTS=false
VITE_ENABLE_SMS=false
VITE_ENABLE_EMAIL=false
VITE_ALLOW_PIN_CREATION=false
VITE_ALLOW_DATA_MODIFICATION=false

# Demo Restrictions
VITE_READ_ONLY_MODE=true
VITE_AUTO_RESET_INTERVAL=3600000  # Reset demo data every hour (in ms)
VITE_MAX_DEMO_PINS=50
VITE_DEMO_SESSION_TIMEOUT=300000  # 5 minutes

# Demo Branding
VITE_DEMO_WATERMARK=true
VITE_DEMO_BANNER_TEXT="DEMO MODE - For Sales Presentation Only"

# Analytics (separate from production)
VITE_GOOGLE_ANALYTICS_ID=G-DEMO-XXXXXXX

# Disable Real Integrations in Demo
VITE_DISABLE_VESTABOARD=true
VITE_DISABLE_FACEBOOK_SHARE=true
VITE_DISABLE_NOTIFICATIONS=true
VITE_DISABLE_EXTERNAL_APIS=true

# Demo Content
VITE_USE_SAMPLE_DATA=true
VITE_SAMPLE_PINS_COUNT=25
VITE_SAMPLE_COMMENTS_COUNT=10
