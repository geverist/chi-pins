VITE_SUPABASE_URL=https://YOUR-PROJECT.supabase.co
VITE_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY
# Optional: Service role key for server-side operations (game leaderboards, etc.)
# If not provided, anon key will be used (requires proper RLS policies)
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY

# Stripe Integration for Billing
# Get your keys from: https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY
STRIPE_SECRET_KEY=sk_test_YOUR_SECRET_KEY

# Stripe Price IDs (create in Stripe Dashboard)
VITE_STRIPE_PRICE_STARTER=price_starter_monthly
VITE_STRIPE_PRICE_PROFESSIONAL=price_professional_monthly
VITE_STRIPE_PRICE_VOICE=price_voice_addon_monthly
VITE_STRIPE_PRICE_SMS=price_sms_addon_monthly
VITE_STRIPE_PRICE_ANALYTICS=price_analytics_addon_monthly
VITE_STRIPE_PRICE_HW_STANDARD=price_hardware_standard_onetime
VITE_STRIPE_PRICE_HW_PREMIUM=price_hardware_premium_onetime

# Stripe Webhook Secret (for webhook signature verification)
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# optional, only if you actually post to FB in production
VITE_FACEBOOK_APP_ID=
VITE_FACEBOOK_PAGE_ID=

# optional, Vestaboard Read/Write API integration
# Get your API key from: https://www.vestaboard.com/developers
# Automatically sends new pin notifications to your Vestaboard
VITE_VESTABOARD_API_KEY=

# Square POS Integration for Chicago Mike's ordering and loyalty
# Get your credentials from: https://developer.squareup.com/apps
# SQUARE_ACCESS_TOKEN is secret - keep this on the server only (not in VITE_ vars)
# Requires LOYALTY_READ and LOYALTY_WRITE permissions for loyalty integration
SQUARE_ACCESS_TOKEN=
SQUARE_LOCATION_ID=
SQUARE_ENVIRONMENT=sandbox  # or 'production'
# Square Application ID for Web Payments SDK (client-side, can be public)
VITE_SQUARE_APPLICATION_ID=
VITE_SQUARE_LOCATION_ID=

# Jukebox Integration - Local Media Server + Sonos
# Media server (Plex, Jellyfin, or custom API)
MEDIA_SERVER_URL=http://localhost:32400
MEDIA_SERVER_API_KEY=

# Sonos API (node-sonos-http-api or similar)
# See: https://github.com/jishi/node-sonos-http-api
SONOS_API_URL=http://localhost:5005
SONOS_API_KEY=
SONOS_SPEAKER_ID=

# AI & Voice Features
# ⚠️ CRITICAL: These are SECRET keys - NEVER commit real values
# Add these ONLY to Vercel Environment Variables for production

# OpenAI API (for voice assistant, chat features)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-YOUR_KEY_HERE

# Anthropic Claude API (for autonomous healer, advanced AI features)
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-api03-YOUR_KEY_HERE

# ElevenLabs API (for text-to-speech voice generation)
# Get from: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=sk_YOUR_KEY_HERE

# GitHub Personal Access Token (for autonomous healer PR creation)
# Get from: https://github.com/settings/tokens
# Required scopes: repo, workflow
GITHUB_TOKEN=ghp_YOUR_TOKEN_HERE

# Twilio SMS Integration
# Get from: https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Autonomous Healer Configuration
AUTO_FIX_ENABLED=false
AUTO_MERGE=false
DRY_RUN=true

# Development Settings
NODE_ENV=development
